{
    "extends": "../../module-build/tsconfig.esm.es6.json",
    "compilerOptions": {
        "composite": true,
        "rootDir": "src/ts",
        "outDir": "dist/esm/es6",
        "baseUrl": ".",
        "paths": {
            "@ag-*": [
                "node_modules/@ag-*/dist/esm/es6/main"
            ]
        }
    },
    "include": [
        "src/ts/**/*"
    ],
    "exclude": [
        "**/*.test.ts",
        "src/ts/**/mock.ts"
    ]
}
