{
  "compilerOptions": {
    "module": "ES6",
    "strictNullChecks": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "declaration": true,
    "target": "ES6",
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "types": [],
    /* to prevent inclusion of node types etc, amongst others - sub modules need to specify types they require */
    "lib": [
      "ES2017",
      "dom"
    ]
  }
}
